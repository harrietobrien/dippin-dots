#!/usr/bin/env bash
# harrietobrien

set -euo pipefail

PATH="/opt/anaconda"

if [ -f "$PATH/etc/profile.d/conda.sh" ]; then
  # shellcheck disable=SC1091
  source "$PATH/etc/profile.d/conda.sh"
  conda activate base >/dev/null 2>&1 || true
fi

# 11 via XWayland, not Wayland Qt backend
export QT_QPA_PLATFORM="xcb"
export QT_OPENGL="software"
export LIBGL_ALWAYS_SOFTWARE="1"
export QT_XCB_GL_INTEGRATION="none"
export QTWEBENGINE_CHROMIUM_FLAGS="--disable-gpu --disable-gpu-compositing"

exec conda run -n nav anaconda-navigator "$@"

